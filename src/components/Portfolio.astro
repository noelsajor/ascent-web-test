    image: '/assets/STRIKE_cover.webp',
    imageAlt: 'Strike legal THC brand website'
  }
];
---

<section class="portfolio" id="work">
  <div class="container">
    <div class="section-header reveal-item">
      <h2>Selected Work</h2>
      <p>Brand systems and content execution designed to support growth and clarity.</p>
    </div>
    <div class="portfolio-grid">
      {portfolioItems.map(item => (
        <a href={item.url} target="_blank" rel="noopener noreferrer" class="portfolio-item reveal-item">
          <div class="portfolio-image">
            <Image 
              src={item.image} 
              alt={item.imageAlt}
              width={800}
              height={450}
              class="portfolio-img"
              loading="lazy"
            />
          </div>
          <div class="portfolio-content">
            <div class="portfolio-tags">
              {item.tags.map(tag => (
                <span class="portfolio-tag">{tag}</span>
              ))}
            </div>
            <h3>{item.title}</h3>
            <p>{item.description}</p>
            <span class="portfolio-link">Visit Website â†’</span>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
